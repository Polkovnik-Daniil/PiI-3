
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<div>
    <table>
        <tr>
            <td><form method="get" action="~/Dict/Add"><input type="submit" value="Add" /></form></td>
            <td><form method="get" action="~/Dict/Update"><input type="submit" value="Update" /><input type="hidden" id="idSelectedItem" name="idSelectedItem" value="" /></form></td>
            <td><form method="get" action="~/Dict/Delete"><input type="submit" value="Delete" /> <input type="hidden" id="delSelectedItem" name="delSelectedItem" value="" /></form></td>
        </tr>
    </table>
    <table border="1">
        <tr>
            <td>Select</td>
            <td>Surname</td>
            <td>Telephone number</td>
            <td>ID</td>

        </tr>
        @foreach (var item in ViewBag.phones) {
            <tr>
                <td><input type="radio" name="a" id="@item.Id" onchange="change()" /></td>
                <td>@item.surName</td>
                <td>@item.phoneNumber</td>
                <td>@item.Id</td>
            </tr>
         }
    </table>
    <script>
        function change() {
            let elem = document.getElementsByName('a')
            let update = document.getElementsByName('idSelectedItem')
            let del = document.getElementsByName('delSelectedItem')
            elem.forEach(item => {
                if (item.checked) {
                    update[0].value = item.id
                    del[0].value =  item.id
                }
            })
        }
    </script>
</div>




